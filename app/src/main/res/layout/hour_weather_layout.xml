            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="25dp"
            android:textColor="@color/card_text_color"
            android:textSize="15sp"
            android:text="08-11时"/>

        <LinearLayout
