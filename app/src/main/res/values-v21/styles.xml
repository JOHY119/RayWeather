<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- remove shadow below action bar -->
        <item name="android:elevation">0dp</item>
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
        <!--ActionBar的颜色-->
        <item name="colorPrimary">@color/primary_color</item>
        <!-- 随主题而改变的颜色（如CheckBox的颜色）-->
        <item name="colorAccent">@color/accent_material_light</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/background_material_light</item>
        <!--ActionBar的主题-->
        <item name="actionBarStyle">@style/Theme.MyApp.ActionBar</item>
        <!--状态栏半透明-->
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="ColorGreen" parent="AppTheme">
        <!--状态栏的颜色 （使用support包时似乎无效。）-->
        <item name="colorPrimaryDark">@color/dark_primary_color</item>
        <!--导航栏颜色-->
        <item name="android:navigationBarColor">@color/primary_color</item>
        <item name="colorTheme">@color/primary_color</item>
    </style>

    <style name="ColorGreenTheme" parent="ColorGreen" >
        <item name="android:statusBarColor">@color/dark_primary_color</item>
    </style>

    <style name="ColorBlue" parent="AppTheme">
        <!--状态栏的颜色 （使用support包时似乎无效。）-->
        <item name="colorPrimaryDark">#0288D1</item>
        <!--导航栏颜色-->
        <item name="android:navigationBarColor">#03A9F4</item>
        <item name="colorTheme">#03A9F4</item>
    </style>

    <style name="ColorBlueTheme" parent="ColorBlue" >
        <item name="android:statusBarColor">#0288D1</item>
    </style>

    <style name="ColorYellow" parent="AppTheme" >
        <!--状态栏的颜色 （使用support包时似乎无效。）-->
        <item name="colorPrimaryDark">#FFA000</item>
        <!--导航栏颜色-->
        <item name="android:navigationBarColor">#FFC107</item>
        <item name="colorTheme">#FFC107</item>
    </style>

    <style name="ColorYellowTheme" parent="ColorYellow" >
        <item name="android:statusBarColor">#FFA000</item>
    </style>

    <style name="ColorGreenDark" parent="AppTheme" >
        <!--状态栏的颜色 （使用support包时似乎无效。）-->
        <item name="colorPrimaryDark">#00796B</item>
        <!--导航栏颜色-->
        <item name="android:navigationBarColor">#009688</item>
        <item name="colorTheme">#009688</item>
    </style>

    <style name="ColorGreenDarkTheme" parent="ColorGreenDark" >
        <item name="android:statusBarColor">#00796B</item>
    </style>

    <style name="Theme.MyApp.ActionBar" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- remove shadow below action bar -->
        <item name="android:elevation">0dp</item>
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
    </style>

    <style name="textStyle" >
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>